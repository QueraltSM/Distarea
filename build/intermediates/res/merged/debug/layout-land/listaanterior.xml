<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/base"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ListaArticulos" >
    <!-- 
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
     -->
     
     <LinearLayout
        android:id="@+id/encabezado"
        android:layout_height="25dp"
    	android:layout_width="fill_parent"
    	android:gravity="bottom"
    	android:orientation="horizontal">
        
        <TextView android:id="@+id/txtarticulo" 
            android:text="@string/articulo"
            android:textColor="@color/verdeDisoft2"
            android:layout_height="wrap_content"
    		android:layout_width="wrap_content"
    		android:paddingLeft="5dp"
    		android:clickable="true"/>
        <ImageView android:id="@+id/sortarticulo"
            android:src="@drawable/v"
            android:layout_height="wrap_content"
    		android:layout_width="wrap_content"
    		android:layout_gravity="center_vertical"
            android:visibility="invisible"
            android:scaleType="matrix"/>
	    	
	    <LinearLayout android:layout_width="fill_parent"
   		    android:layout_height="wrap_content"
   		    android:gravity="right">
   		    
	        <TextView android:id="@+id/txtfecha"
   			    android:text="Fecha"
	            android:textColor="@color/verdeDisoft2"
	            android:layout_height="wrap_content"
	    		android:layout_width="wrap_content"
	    		android:layout_gravity="right"
	    		android:paddingRight="45dp"/>
	        <TextView android:id="@+id/txtund" 
	   		    android:text="Und."
	            android:textColor="@color/verdeDisoft2"
	            android:layout_height="wrap_content"
	    		android:layout_width="wrap_content"
	    		android:layout_gravity="right"
	    		android:paddingRight="6dp"/>
   		    <TextView android:id="@+id/txttipo" 
	   		    android:text="Tipo"
	            android:textColor="@color/verdeDisoft2"
	            android:layout_height="wrap_content"
	    		android:layout_width="wrap_content"
	    		android:layout_gravity="right"
	    		android:paddingRight="13dp"/>
   			<TextView android:id="@+id/txtprecio" 
	   		    android:text="Precio"
	            android:textColor="@color/verdeDisoft2"
	            android:layout_height="wrap_content"
	    		android:layout_width="wrap_content"
	    		android:layout_gravity="right"
	    		android:paddingRight="44dp"/>
	        <TextView android:id="@+id/txtsel" 
	   		    android:text="OK"
	            android:textColor="@color/verdeDisoft2"
	            android:layout_height="wrap_content"
	    		android:layout_width="wrap_content"
	    		android:layout_gravity="right"
	    		android:paddingRight="7dp"/>
	   		
   		</LinearLayout>
        
     </LinearLayout>

    <ListView 
     android:id="@android:id/list"
     android:layout_width="fill_parent"
     android:layout_height="0dp"
   	 android:layout_weight="1"
     android:drawSelectorOnTop="false"
	 android:textSize="18sp"/>

</LinearLayout>