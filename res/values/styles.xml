        <item name="android:scrollbarTrackVertical">@android:color/transparent</item>
        <item name="android:dropDownSelector">@drawable/bordeexterior</item>
        <!-- <item name="android:dropDownSelector">@color/verdeDisoft3</item>  -->
        
    </style>

