<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/base"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ListaEst" >
     
     <LinearLayout
        android:id="@+id/encabezado"
        android:layout_height="wrap_content"
    	android:layout_width="fill_parent"
    	android:orientation="horizontal">
        
        <TextView android:id="@+id/txtnombre" 
            android:text="@string/nomest"
            android:textColor="@color/verdeDisoft2"
            android:layout_height="wrap_content"
    		android:layout_width="wrap_content"
    		android:layout_gravity="left"
    		android:layout_weight="0.6"
    		android:clickable="true"/>
        <ImageView android:id="@+id/sortnombre"
            android:src="@drawable/v"
            android:layout_height="wrap_content"
    		android:layout_width="wrap_content"
            android:visibility="invisible"
            android:scaleType="matrix"/>
        
	    <TextView android:id="@+id/txtcp" 
	   	    android:text="@string/codpos"
	        android:textColor="@color/verdeDisoft2"
	        android:layout_height="wrap_content"
	    	android:layout_width="wrap_content"
	    	android:layout_gravity="right"
	    	android:gravity="right"
	    	android:layout_weight="0.35"
	    	android:clickable="true"/>
	    <ImageView android:id="@+id/sortcp"
            android:src="@drawable/v"
            android:layout_height="wrap_content"
    		android:layout_width="wrap_content"
            android:visibility="invisible"
            android:scaleType="matrix"/>
   		    
	    <TextView android:id="@+id/txtsel" 
	   	    android:text="OK"
	        android:textColor="@color/verdeDisoft2"
	        android:layout_height="wrap_content"
	    	android:layout_width="wrap_content"
	    	android:layout_gravity="right"
	    	android:gravity="right"
	    	android:layout_weight="0.05"/>
        
     </LinearLayout>

    <ListView 
         android:id="@android:id/list"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:drawSelectorOnTop="false"
		 android:textSize="18sp"/>

</LinearLayout>