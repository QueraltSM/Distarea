<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/framebase"
    tools:context=".ListaArticulos">
    
	<LinearLayout
	    android:id="@+id/base"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    android:paddingBottom="0dp">

    <!-- 
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
     -->
     <LinearLayout 
        android:layout_height="wrap_content"
    	android:layout_width="match_parent"
    	android:orientation="horizontal">
        
     <RadioGroup
         android:id="@+id/grupos"
         android:layout_width="wrap_content"
         android:layout_height="40dp"
         android:gravity="bottom"
         android:orientation="horizontal"
         android:padding="0px"
         android:visibility="visible" >
    		
		    <RadioButton
		        android:id="@+id/todos"
		        android:layout_width="0dp"
		        android:layout_height="match_parent"
		        android:layout_weight="1"
		        android:layout_marginRight="-5dp"
		        android:background="@drawable/botondisoft_fijable"
		        android:button="@null"
		        android:checked="true"
		        android:gravity="center"
		        android:text="Todos" />
		    
		    <RadioButton
		        android:id="@+id/seleccion"
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:layout_marginLeft="-5dp"
		        android:layout_marginRight="-5dp"
		        android:background="@drawable/botondisoft_fijable"
		        android:button="@null"
		        android:gravity="center"
		        android:text="Seleccionados" />
		    
		    <RadioButton
		        android:id="@+id/familia"
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:layout_marginLeft="-5dp"
		        android:layout_marginRight="-5dp"
		        android:button="@null"
		        android:background="@drawable/botondisoft_fijable"
		        android:gravity="center"
		        android:text="Familias"
		        android:visibility="visible" />
		    
		</RadioGroup>
		    
		     <CheckBox
		         android:id="@+id/buscar"
		         android:layout_width="match_parent"
		         android:layout_height="match_parent"
		         android:layout_marginLeft="-5dp"
		         android:background="@drawable/botondisoft_fijable"
		         android:button="@null"
		         android:drawableTop="@drawable/action_search"
		         android:gravity="center"
		         android:paddingLeft="10dp"
		         android:paddingRight="10dp"
		         android:paddingTop="4dp" />
	    
     </LinearLayout>
	
	
    <LinearLayout
        android:id="@+id/pestanias"
        android:layout_height="wrap_content"
    	android:layout_width="fill_parent"
    	android:gravity="bottom"
    	android:orientation="horizontal"
    	android:padding="0px"
    	android:visibility="gone">
		    
        <HorizontalScrollView 
            android:id="@+id/slider"
        	android:layout_height="wrap_content"
    		android:layout_width="fill_parent"
    		android:scrollbars="none"
    		android:orientation="horizontal">
            
            <RadioGroup 
                android:id="@+id/botones"
                android:layout_height="fill_parent"
    			android:layout_width="wrap_content"
    			android:orientation="horizontal"/>
            
        </HorizontalScrollView>
		    
     </LinearLayout>
     
     <LinearLayout
        android:id="@+id/encabezado"
        android:layout_height="25dp"
    	android:layout_width="fill_parent"
    	android:gravity="bottom"
    	android:orientation="horizontal">
        
        <TextView android:id="@+id/txtarticulo" 
            android:text="@string/articulo"
            android:textColor="@color/verdeDisoft2"
            android:layout_height="wrap_content"
    		android:layout_width="wrap_content"
    		android:paddingLeft="5dp"
    		android:clickable="true"/>
        <ImageView android:id="@+id/sortarticulo"
            android:src="@drawable/v"
            android:layout_height="wrap_content"
    		android:layout_width="wrap_content"
    		android:layout_gravity="center_vertical"
            android:visibility="invisible"
            android:scaleType="matrix"/>
	    	
	    <LinearLayout android:layout_width="fill_parent"
   		    android:layout_height="wrap_content"
   		    android:gravity="right">
   		    
	        <TextView android:id="@+id/txtcantidad" 
	            android:text="Cantidad"
	            android:textColor="@color/verdeDisoft2"
	            android:layout_height="wrap_content"
	    		android:layout_width="wrap_content"
	    		android:layout_marginRight="10dip"/>
   		    
   			<TextView android:id="@+id/txtprecio" 
	            android:text="@string/precio"
	            android:textColor="@color/verdeDisoft2"
	            android:layout_height="wrap_content"
	    		android:layout_width="wrap_content"
	    		android:layout_marginRight="10dip"/>
   			
	        <TextView android:id="@+id/txtsel" 
	   		    android:text="OK"
	            android:textColor="@color/verdeDisoft2"
	            android:layout_height="wrap_content"
	    		android:layout_width="wrap_content"
	    		android:paddingRight="5px"
	    		android:layout_gravity="right"/>
	   		
   		</LinearLayout>
        
     </LinearLayout>
     
     <ProgressBar 
         android:id="@+id/loading"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content" />

    <ListView 
         android:id="@android:id/list"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_weight="1"
         android:drawSelectorOnTop="false"
         android:scrollingCache="false"
         android:animationCache="false"         
		 android:textSize="18sp"/>
    
    <TextView
        android:id="@+id/pie1"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:text="Pulse + para crear un producto nuevo."
         android:textColor="@android:color/black"
         android:textStyle="italic"
         android:gravity="center"
         android:textSize="12sp"
         android:visibility="gone"/>
    
    <TextView
        android:id="@+id/pie2"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="center"
         android:gravity="center"
         android:text="El precio no es definitivo hasta enviado el pedido para su comprobaciÃ³n."
         android:textColor="@android:color/black"
         android:singleLine="true"
         android:ellipsize="marquee" 
         android:marqueeRepeatLimit="marquee_forever"
         android:focusable="true"
         android:focusableInTouchMode="true"   
         android:textSize="12sp"/>
    <!-- 
    android:focusable="true" 
         android:focusableInTouchMode="true" -->
    

</LinearLayout>

<ImageView
        android:id="@+id/zoom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible" />
	
</FrameLayout>