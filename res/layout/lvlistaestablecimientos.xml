<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="64dp"
    android:background="@color/azulDisoft3"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:weightSum="1" >

 	<!-- android:paddingLeft="4dp"
    android:paddingRight="15dp"
    android:paddingTop="13dp"
    android:paddingBottom="13dp" -->
    
    <LinearLayout
        android:id="@+id/tramo1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.99"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
 	
	    <ImageView
	        android:id="@+id/favorito"
	        android:contentDescription="@string/favorito"
	        android:layout_width="48dp"
	        android:layout_height="48dp"
	        android:layout_gravity="center_vertical"
	        android:adjustViewBounds="true" />
	 
	    <TextView
	        android:id="@+id/nombreest"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        android:gravity="left|center_vertical"
	        android:paddingLeft="10dp"
	        android:lines="1"
	        android:textColor="@android:color/black"/>
    
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tramo2"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginBottom="-5dp"
        android:layout_marginTop="-5dp"
        android:layout_weight="0.01"
        android:background="@drawable/botondisoft"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >
    
	     <FrameLayout 
	        android:id="@+id/icono"
	        android:layout_width="48dip"
	        android:layout_height="48dip"
	        android:paddingLeft="0dp"
	        android:layout_gravity="center_vertical|right">
	        
	        <ImageView
		        android:id="@+id/tipo"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:padding="6dp"
	        	android:adjustViewBounds="true" />
	        
	        <ImageView 
		         android:src="@drawable/circulizar"
		         android:layout_width="match_parent"
		         android:layout_height="match_parent" />
	        
	    </FrameLayout>
	    
	     <ImageView
	         android:id="@+id/irdirecto"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_gravity="center_vertical|right"
	         android:layout_marginLeft="-20dp"
	         android:layout_marginRight="-10dp"
	         android:paddingLeft="10dp"
	         android:paddingRight="0dp"
	         android:src="@drawable/navigation_next_item" />
     
     </LinearLayout>	     "
    
</LinearLayout>
