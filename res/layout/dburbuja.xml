<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/azulDisoft3">
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@color/azulDisoft3"
    android:paddingTop="30dip"
    android:paddingLeft="10dip"
    android:paddingRight="10dip"
    android:paddingBottom="10dip" >
    
    <LinearLayout 
        android:id="@+id/btncompartir"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/botondisoft"
        android:clickable="true"
        android:gravity="center">
        <ImageView
            android:src="@drawable/social_share"
        	android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:gravity="left|center_vertical"/>
	    <TextView 
	        android:text="Compartir"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:lines="2"
	        android:textAppearance="@android:style/TextAppearance.Large"
	        android:gravity="right|center_vertical"/>
	</LinearLayout>

    <LinearLayout 
        android:id="@+id/btnborrarmensaje"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/botondisoft"
        android:clickable="true"
        android:gravity="center">
        <ImageView
            android:src="@drawable/content_discard"
        	android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:gravity="left|center_vertical"/>
	    <TextView 
	        android:text="Borrar\nmensaje"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:lines="2"
	        android:textAppearance="@android:style/TextAppearance.Large"
	        android:gravity="right|center_vertical"/>
	</LinearLayout>
	
    <LinearLayout 
        android:id="@+id/btnversoloeste"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/botondisoft"
        android:clickable="true"
        android:gravity="center"
        android:visibility="gone">
        <ImageView
            android:src="@drawable/eye"
        	android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:gravity="left|center_vertical"/>
	    <TextView 
	        android:text="Ver sÃ³lo mensajes\nde este remitente"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:textAppearance="@android:style/TextAppearance.Large"
	        android:gravity="right|center_vertical"/>
	</LinearLayout>
	
    <LinearLayout 
        android:id="@+id/btnresponder"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/botondisoft"
        android:clickable="true"
        android:gravity="center"
        android:visibility="gone">
        <ImageView
            android:src="@drawable/social_reply"
        	android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:gravity="left|center_vertical"/>
	    <TextView 
	        android:text="Responder como Establecimiento"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:textAppearance="@android:style/TextAppearance.Large"
	        android:gravity="right|center_vertical"/>
	</LinearLayout>
	
   
</LinearLayout>

	<LinearLayout
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    android:layout_alignParentTop="true"
		android:layout_alignParentRight="true">
	    
	    <ImageButton
            android:id="@+id/cancel"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:src="@drawable/navigation_cancel"
        	android:padding="0dp"
        	android:layout_margin="0dp"
            android:background="@drawable/botonfino"
            android:contentDescription="@string/btncancelar"/>
    
	</LinearLayout>
</RelativeLayout>