<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:gravity="center"
    android:id="@+id/basereg" >
    
    <ScrollView
        android:layout_width="match_parent"
    	android:layout_height="match_parent">
    
    <LinearLayout
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
    	android:paddingTop="10dp"
    	android:paddingBottom="10dp"
    	android:gravity="center"
    	android:background="@drawable/bordeexterior_transp"
        android:id="@+id/englobe">
        
        <TextView 
            android:id="@+id/identificate"
            android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:gravity="center"
        	android:textColor="@android:color/black"
        	android:textSize="30sp"
        	android:text="@string/identificate" />
        
        <ImageView
            android:id="@+id/lineahorizontal"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:src="@drawable/lineahorizontal" />
    
    <LinearLayout 
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        
	    <TextView
	        android:id="@+id/txtnombre"
	        android:layout_width="10dp"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="1dp"
	        android:paddingRight="0dp"
	        android:layout_weight="0.4"
	        android:gravity="center"
	        android:text="@string/usuario"
	        android:textAppearance="?android:attr/textAppearanceSmall" />
	
	    <EditText
	        android:id="@+id/nombre"
	        android:layout_weight="1"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="1dp"
	        
	        android:textColor="@android:color/black"
	        android:inputType="text"
	        android:hint="@string/hintUser"
	        android:maxLength="50"
	        android:textAppearance="?android:attr/textAppearanceSmall" >
	        <requestFocus />
	
	    </EditText>
	    
	    <ImageButton
	        android:id="@+id/clrnombre"
	        android:src="@drawable/navigation_cancel"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:padding="0dp"
	        android:layout_margin="0dp"
	        android:visibility="invisible"
	        android:background="@drawable/botonfino"/>
	    
	</LinearLayout>
    
    <!-- <TextView
        android:id="@+id/idconsejo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/idconsejo"
        android:background="@android:color/white"
        android:textAppearance="?android:attr/textAppearanceSmall" 
        android:gravity="center"/> -->
    
    <LinearLayout 
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

	    <TextView
	        android:id="@+id/txtpass"
	        android:layout_width="10dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="0.5"
	        android:gravity="center"
	        android:layout_marginRight="1dp"
	        android:paddingRight="0dp"
	        android:text="@string/txtpass"
	        android:textAppearance="?android:attr/textAppearanceSmall" />
	    
	    <EditText
	        android:id="@+id/pass"
	        android:layout_weight="1"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="1dp"
	        
	        android:textColor="@android:color/black"
	        android:inputType="textPassword"
	        android:maxLength="20"
	        android:textAppearance="?android:attr/textAppearanceSmall" />
	    
	    <ImageButton
	        android:id="@+id/seepass"
	        android:src="@drawable/eye"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:padding="0dp"
	        android:layout_margin="0dp"
	        android:background="@drawable/botonfino"/>
	    
	    <ImageButton
	        android:id="@+id/clrpass"
	        android:src="@drawable/navigation_cancel"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:padding="0dp"
	        android:layout_margin="0dp"
	        android:visibility="invisible"
	        android:background="@drawable/botonfino"/>
	
	</LinearLayout>
	
    <LinearLayout 
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:paddingBottom="0dp"
        android:gravity="center">

	    <TextView
	        android:id="@+id/txtpass2"
	        android:layout_width="10dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="0.5"
	        android:gravity="center"
	        android:layout_marginRight="1dp"
	        android:paddingRight="0dp"
	        android:text="@string/txtpass2"
	        android:textAppearance="?android:attr/textAppearanceSmall" />
	    
	    <EditText
	        android:id="@+id/pass2"
	        android:layout_weight="1"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="1dp"
	        
	        android:textColor="@android:color/black"
	        android:inputType="textPassword"
	        android:textAppearance="?android:attr/textAppearanceSmall" />
	    
	    <ImageButton
	        android:id="@+id/seepass2"
	        android:src="@drawable/eye"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:padding="0dp"
	        android:layout_margin="0dp"
	        android:background="@drawable/botonfino"/>
	    
	    <ImageButton
	        android:id="@+id/clrpass2"
	        android:src="@drawable/navigation_cancel"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:padding="0dp"
	        android:layout_margin="0dp"
	        android:visibility="invisible"
	        android:background="@drawable/botonfino"/>
	
	</LinearLayout>
    
    <TextView
        android:id="@+id/estado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:background="@android:color/white"
        android:textColor="#ff0000"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:visibility="invisible" />
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >
	    
        <TextView
            android:id="@+id/txtpais"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingRight="0dp"
            android:text="@string/txtpais"
            android:textAppearance="?android:attr/textAppearanceSmall" />
		<LinearLayout 
		    android:id="@+id/restopais"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginRight="35dp">
         <Spinner
             android:id="@+id/pais"
             android:layout_width="125dp"
             android:layout_height="wrap_content"
             android:gravity="top"
             android:paddingLeft="0dp" />
         
         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="15dp"
             android:background="@color/azulDisoft3" >

			<ImageButton
			    android:id="@+id/continuar"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:background="@drawable/btn_default_holo_light"
			    android:gravity="bottom|center_horizontal"
			    android:src="@drawable/navigation_forward" />

		</LinearLayout>
		
        </LinearLayout>

	</LinearLayout>

    </LinearLayout>

    </ScrollView>

</LinearLayout>